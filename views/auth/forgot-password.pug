extends ../layout

block head
    link(rel="stylesheet", href="/css/auth.css")

block content
    section.py-5.bg-light
        div.container
            div.bg-white
                div.text-center
                    a(href="/")
                        img.mb-2(src="/img/brand/logo.svg", width="128", height="128")
                    h2 Forgot Password
                form.needs-validation(action="/auth/forgot-password", method="post", novalidate)
                    div.form-group
                        label Email
                        input.form-control(type="email", name="username", required)
                    if infoMessages.length
                        each message in infoMessages
                            div.alert.alert-success= message
                    if errorMessages.length
                        each message in errorMessages
                            div.alert.alert-danger= message
                    button.btn.btn-block.btn-primary(type="submit") Reset Password

block scripts
    script(src="/js/auth.bundle.js")
