extends ../layout

block head
    link(rel="stylesheet", href="/css/auth.css")

block content
    div.container
        div.py-3.text-center
            img.mb-2(src="https://getbootstrap.com/docs/4.2/assets/brand/bootstrap-solid.svg", width="72", height="72")
            h2 Join Ranked Royale
        form(action="/auth/signup", method="post")
            div.form-group
                label Email
                input.form-control(type="email", name="username")
            div.form-group
                label Password
                input.form-control(type="password", name="password")
                small.form-text.text-muted Passwords must be at least 8 characters long.
            button.btn.btn-block.btn-primary(type="submit") Sign Up
