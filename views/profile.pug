                                                                    thead
                                                                        tr
                                                                            th Match
                                                                            th Kills
                                                                            th Top 25
                                                                            th Top 10
                                                                            th Win
                                                                            th Rating Change
                                                                    tbody
                                                                        each match in matches.solo
                                                                            if match.stat
                                                                                tr
                                                                                    th.text-capitalize= match.sessionId.substr(match.sessionId.length - 3)
                                                                                    td= match.stat.kills
                                                                                    if match.stat.placeTop25
                                                                                        td #[i.fas.fa-check]
                                                                                    else
                                                                                        td #[i.fas.fa-times]
                                                                                    if match.stat.placeTop10
                                                                                        td #[i.fas.fa-check]
                                                                                    else
                                                                                        td #[i.fas.fa-times]
                                                                                    if match.stat.placeTop1
                                                                                        td #[i.fas.fa-check]
                                                                                    else
                                                                                        td #[i.fas.fa-times]
